{
  "extends": "@susisu",
  "parserOptions":{
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "require-await": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["jest.config.js"],
      "rules": {
        "max-len": "off"
      }
    }
  ]
}
